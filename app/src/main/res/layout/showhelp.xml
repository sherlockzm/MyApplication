<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:stretchColumns="1"
    android:padding="20dp">
    <TableRow>
<TextView android:text="@string/tv_simple_title" android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:textStyle="bold"
    android:layout_marginBottom="15dp" />
<TextView android:id="@+id/tv_show_title" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    </TableRow>

    <TableRow>
<TextView android:text="@string/tv_pay" android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:textStyle="bold" />
<TextView android:id="@+id/tv_show_pay" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    </TableRow>

    <TableRow>
<TextView android:text="@string/tv_when_request" android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:textStyle="bold" />
<TextView android:id="@+id/tv_limitTime" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    </TableRow>

    <TableRow>
    <TextView android:text="@string/tv_context" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:textStyle="bold" />
    </TableRow>
    <TableRow android:layout_width="match_parent">
        <TextView android:layout_span="3" android:id="@+id/tv_show_detail" android:layout_width="match_parent" android:layout_height="wrap_content" />
    </TableRow>
    <LinearLayout android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

        <ImageView android:id="@+id/detailImage" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:gravity="center">
        <ImageButton android:background="@drawable/run" android:id="@+id/btn_notHelp" android:text="@string/btn_notHelp" android:layout_width="wrap_content"  android:layout_height="wrap_content"
            android:layout_marginRight="20dp" />
        <ImageButton android:background="@drawable/help2" android:id="@+id/btn_iHelp" android:text="@string/btn_iHelp" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_act"
            android:background="@drawable/act"
            android:layout_marginLeft="20dp" />
    </LinearLayout>
</TableLayout>
