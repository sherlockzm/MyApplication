<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:whatever="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="30dp"
    android:paddingBottom="40dp"
    android:stretchColumns="1">

    <LinearLayout android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:text="登陆"
            android:textSize="22dp"
            android:textStyle="bold"
            android:typeface="monospace" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#e1f6d5"
            android:paddingBottom="10dp" />
    </LinearLayout>

    <TableRow android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_tel"
            android:textColor="#fbfa8907"
            android:textStyle="bold" />

        <com.andreabaccega.widget.FormEditText
            android:id="@+id/edt_login_tel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/edt_hint_tel"
            android:inputType="phone"
            android:textSize="12dp"
            whatever:emptyErrorString="@string/emptyError"
            whatever:testType="phone" />
    </TableRow>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_inputPwd"
            android:textColor="#fbfa8907"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_login_pwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/verAndPwd"
            android:inputType="textWebPassword"
            android:textSize="12dp" />
    </TableRow>

    <TableRow android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_verification"
            android:textColor="#fbfa8907"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_login_ver"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/verAndPwd"
            android:textSize="12dp" />
    </TableRow>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#e1f6d5"
        android:paddingTop="10dp" />
    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <ImageButton
            android:id="@+id/btn_getVer_login"
            android:background="@drawable/yanzheng"
            android:text="@string/tv_getVerification"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingRight="10dp" />

        <ImageButton
            android:id="@+id/btn_login"
            android:background="@drawable/login"
            android:layout_width="wrap_content"
            android:text="@string/btn_login"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <ImageButton
            android:id="@+id/btn_reg_in_login"
            android:background="@drawable/reg"
            android:text="@string/btn_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</TableLayout>


